@model IEnumerable<EduLife.Models.User>
@{
    ViewData["Title"] = "List of all users";
}

<a asp-action="Create"> Add new User</a>

<table class="table">
	<tr><th>Email</th></tr>
	@foreach (var user in Model)
	{
		<tr>
			<td>@user.Email</td>
			<td>
				<form asp-action="Delete" asp-route-id="@user.Id" method="post">
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
					<button type="submit" class="btn btn-sm btn-danger">Delete</button>
				</form>
			</td>
		</tr>

	}
</table>

